{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "baseUrl": ".",
    "paths": {
      "@codescope/types": ["../../packages/types/src/index.ts"],
      "@codescope/ui": ["../../packages/ui/src/index.ts"],
      "@codescope/ui/foundation": ["../../packages/ui/src/foundation/index.ts"],
      "@codescope/ui/hooks": ["../../packages/ui/src/hooks/index.ts"],
      "@codescope/ui/utils": ["../../packages/ui/src/utils/index.ts"],
      "@codescope/utils": ["../../packages/utils/src/index.ts"]
    }
  }
}
